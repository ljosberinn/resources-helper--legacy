{
  "extends": [
    "tslint:all"
  ],
  "defaultSeverity": "warning",
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "analysis/**/*.js",
      "vendor/**/*.js",
      "public/vendor/**/*.js"
    ]
  },
  "rules": {
    "arrow-return-shorthand": true,
    "quotemark": false
  }
}
